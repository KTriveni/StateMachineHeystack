<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css" rel='stylesheet' type='text/css'>
<div class="col-md-10 col-md-offset-1">
  <div class="panel panel-default panel-table">
    <div class="panel-heading">
      <div class="row">
        <div class="col col-xs-6">
          <h3 class="panel-title">Listing State Machines</h3>
          <p id="notice"><%= notice %>
        </div>
        <div class="col col-xs-6 text-right">
          <%= link_to 'New State machine', new_state_machine_path ,class: "btn btn-sm btn-primary btn-create"%>
        </div>
      </div>
    </div>
    <div class="panel-body">
      <table class="table table-striped table-bordered table-list">
        <thead>
          <tr>
            <th class="sm-action"><em class="fa fa-cog"></em></th>
            <th class="hidden-xs">ID</th>
            <th>Name</th>
          </tr> 
        </thead>
        <tbody>
          <% @state_machines.each_with_index do |state_machine, index| %>        
            <tr>
              <td align="center">
                <%= link_to '<i class="fa fa-eye"></i> '.html_safe, state_machine ,class: "btn btn-default"%>
                <%= link_to '<i class="fa fa-pencil"></i> '.html_safe, edit_state_machine_path(state_machine) ,class: "btn btn-default"%>
                <%= link_to '<i class="fa fa-desktop"></i> '.html_safe, state_machine_state_machine_nodes_path(state_machine) ,class: "btn btn-default"%>
                <%= link_to '<i class="fa fa-cogs"></i> '.html_safe, generate_nodes_state_machine_state_machine_node_path(state_machine_id: state_machine, id: state_machine.id) ,class: "btn btn-default"%>
                <%= link_to '<i class="fa fa-trash"></i> '.html_safe, state_machine , method: :delete, data: { confirm: 'Are you sure?' } ,class: "btn btn-danger"%>
              </td>
              <td class="hidden-xs"><%= index+1 %></td>
              <td><%= state_machine.name %></td>
            </tr>
          <% end %>  
        </tbody>
      </table>
    </div>
